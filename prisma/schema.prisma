generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id             Int       @id @default(autoincrement())
  shopifyDomain  String    @unique
  accessToken    String
  internalApiKey String?
  isActive       Boolean   @default(true)
  installedAt    DateTime  @default(now())
  uninstalledAt  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customers     Customer[]     @relation("ShopCustomers")
  wishlistItems WishlistItem[] @relation("ShopWishlistItems")
  settings      ShopSettings?
}

model ShopSettings {
  id     Int  @id @default(autoincrement())
  shopId Int  @unique
  shop   Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

  // Basic
  buttonColor       String?
  textColor         String?
  showWishlistCount Boolean? @default(true)

  // Product
  productShowIcon        Boolean? @default(true)
  productButtonText      String?
  productButtonAfterText String?
  productButtonPosition  String?
  productButtonStyle     String?

  // Collection
  collectionShowIcon       Boolean? @default(true)
  collectionButtonPosition String?

  // Wishlist Page
  wishlistLayoutType String?
  showPrice          Boolean? @default(true)
  pageHeading        String?
  showAddToCart      Boolean? @default(true)
  addToCartText      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id        Int      @id @default(autoincrement())
  shopifyId String   @unique
  email     String?
  phone     String?
  name      String?
  createdAt DateTime @default(now())
  shopId    Int

  shop     Shop           @relation("ShopCustomers", fields: [shopId], references: [id], onDelete: Cascade)
  wishlist WishlistItem[] @relation("CustomerWishlist")

  @@unique([shopId, shopifyId])
  @@unique([shopId, email])
  @@unique([shopId, phone])
}

model WishlistItem {
  id            Int      @id @default(autoincrement())
  customerId    String
  productId     String
  variantId     String?
  productTitle  String
  productImage  String?
  productHandle String?
  productPrice  Float?
  createdAt     DateTime @default(now())

  shopId   Int
  shop     Shop     @relation("ShopWishlistItems", fields: [shopId], references: [id], onDelete: Cascade)
  customer Customer @relation("CustomerWishlist", fields: [customerId], references: [shopifyId], onDelete: Cascade)
}
