generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Customer {
  id        Int            @id @default(autoincrement())
  shopifyId String         @unique
  email     String?        @unique
  phone     String?        @unique
  name      String?
  createdAt DateTime       @default(now())
  wishlist  WishlistItem[] @relation("CustomerWishlist")
}

model WishlistItem {
  id            Int      @id @default(autoincrement())
  customerId    String
  productId     String
  variantId     String?
  productTitle  String
  productImage  String?
  productHandle String?
  productPrice  Float?
  createdAt     DateTime @default(now())

  customer Customer @relation("CustomerWishlist", fields: [customerId], references: [shopifyId], onDelete: Cascade)
}
